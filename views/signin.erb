<% content_for :head do %>
  <%= @pinion.css_url("/assets/css/forms.css") %>
  <%= @pinion.css_url("/assets/css/authentication.css") %>
  <%= @pinion.js_url("/assets/js/form_hints.js") %>
<% end %>

<div class="container">
  <div class="authenticationForm">
    <form class="standard hints" action="/signin?redirect=<%= params[:redirect] %>" method="post">
      <div class="flashErrors">
        <% if flash[:errors] && flash[:errors].is_a?(Array) %>
          <ul>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
          <% end %>
          </ul>
        <% end %>
      </div>
      <div class="formField">
        <input type="text" name="email" placeholder="Email" />
      </div>
      <div class="formField">
        <input type="password" name="password" placeholder="Password" />
      </div>
      <div class="formField">
        <button>Sign in</button>
      </div>
    </form>
  </div>
</div>
