<% # Parameters: comment %>

<div class="comment">
  <div class="commentHeader">
    <span class="commentAuthor"><%= comment.user.name %></span>
    <span>commented</span>
    <span class="commentDate">
      <%= comment.created_at.strftime("%B %d, %Y") %></span>
  </div>
  <div class="commentBody">
    <p><%= comment.text %></p>
  </div>
</div>
