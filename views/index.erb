<% content_for :head do %>
  <%= @pinion.css_url("/assets/css/index.css") %>
  <%= @pinion.css_url("/assets/css/forms.css") %>
<% end %>

<div id="home">
  <div id="letterbox" class="faces">
    <div id="siteSummary">
      <h3>Launching the Voices of Real People into the National Conversation</h3>
      <p>That's what we're about. What you see on Social Teeth are political messages created by political underdogs, everyday people, and grassroots organizations. Donate and get these messages on air!</p>
      <p><strong>We will launch on August 15th with our top five ads. Vote to determine which ads make the cut.</strong><p>
    </div>
  </div>
  <div id="contestVoting">
    <h2>24 hour voting period begins August 14 at 12:01 AM PST</h2>
    <h2>Allocate 100 votes among your favorite ads!</h2>
    <h3><a href="/launch-contest">Read more...</a></h3>
  </div>
  <div id="adGrid">
    <table>
      <% ads.each_slice(2) do |slice| %>
        <tr>
          <% slice.each do |ad| %>
            <td>
              <a href="/ads/<%= ad.public_id %>">
                <img src="<%= ad.thumbnail_url(:size => 200, :cropped => true) %>" />
              </a>
              <h3><a href="/ads/<%= ad.public_id %>"><%= ad.title %></a></h3>
              <p class="votes"><%= ad.votes %> votes</p>
              <p class="description"><%= ad.short_description %></p>
            </td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
