<% 2.times do |i| %>
  <%= erb :comment, :locals => { :comment => OpenStruct.new(:text => "This is comment number #{i}. And this is what it looks like when there's a lot of text in the comment. What do you think? Do you like it? DO YOU LIKE IT.", :user => OpenStruct.new(:name => "Daniel MacDougall")) } %>
<% end %>
<div class="commentInput">
  <div class="commentHeader">
    <span>Add a comment</span>
  </div>
  <textarea></textarea>
  <div class="commentControls">
    <a class="button">Submit</a>
  </div>
</div>

