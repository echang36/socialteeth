<% content_for :head do %>
  <%= @pinion.css_url("/assets/css/forms.css") %>
  <%= @pinion.css_url("/assets/css/authentication.css") %>
<% end %>

<div class="authenticationForm">
  <h3>Create an account and contribute to ads.</h3>
  <form class="standard" action="/signup" method="post">
    <table>
      <tr>
        <td></td>
        <td><%= erb :_flash_errors %></td>
      </tr>
        <td class="label">Full name</td>
        <td class="field"><input type="text" name="name" value="<%= flash[:name] %>"/></td>
      </tr>
      <tr>
        <td class="label">Email</td>
        <td class="field"><input type="text" name="email" value="<%= flash[:email] %>"/></td>
      </tr>
      <tr>
        <td class="label">Password</td>
        <td class="field"><input type="password" name="password" /></td>
      </tr>
      <tr>
        <td></td>
        <td class="field"><input type="submit" value="Sign up" /></td>
      </tr>
    </table>
    </div>
  </form>
</div>
