<% content_for :head do %>
  <%= @pinion.css_url("/assets/css/contribute.css") %>
  <%= @pinion.css_url("/assets/css/forms.css") %>
<% end %>

<% amount = amount.to_i %>
<div id="contributeConfirm">
  <h3>Confirm Your Contribution</h3>
  <table>
    <% if ad.id == 52 # Gary Johnson %>
      <tr>
        <td>Name</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><%= current_user.address %></td>
      </tr>
      <tr>
        <td>Occupation</td>
        <td><%= current_user.occupation %></td>
      </tr>
      <tr>
        <td>Employer</td>
        <td><%= current_user.employer %></td>
      </tr>
    <% end %>
    <tr>
      <td>Amount</td>
      <td class="highlight"><%= amount.to_currency %></td>
    </tr>
    <tr>
      <td>Ad</td>
      <td class="highlight"><%= ad.title %></p></td>
    </tr>
  </table>
  <form class="standard" method="post" action="/ads/<%= ad.public_id %>/contribute_submit">
    <input type="hidden" name="amount" value="<%= amount %>" />
    <input type="hidden" name="token" value="<%= token %>" />
    <div class="formField">
      <a href="/ads/<%= ad.public_id %>/contribute">&laquo; Back to contribution details</a>
      <input type="submit" value="Confirm and Submit Payment" />
    </div>
  </form>
</div>
