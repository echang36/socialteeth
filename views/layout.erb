<!DOCTYPE html>
<html>
  <head>
    <title>Social Teeth</title>
    <%= @pinion.css_url("/css/common.css") %>
    <script type="text/javascript" src="<%= @pinion.asset_url("/js/lib/jquery-1.7.2.min.js") %>"></script>
    <%= yield_content :head %>
    <%= erb :google_analytics if production? %>
  </head>
  <body>
    <div id="wrapper">
      <div id="header">
        <div class="container">
          <a id="logo" href="/">SocialTeeth</a>
          <div class="nav">
            <ul>
              <li><a href="/submit">Submit Ad</a></li>
              <% if current_user && current_user.admin? %>
                <li><a href="/browse">Browse</a></li>
              <% end %>
              <% if !production? %>
                <li><a href="/labs">Labs</a></li>
              <% end %>
              <li><a href="/about">About</a></li>
              <li><a href="/press">Press</a></li>
            </ul>
          </div>
          <div id="signin">
            <% if current_user %>
              <span class="username"><%= current_user.name %></span> |
              <a href="/signout">Sign Out</a>
            <% else %>
              <a href="/signup">Sign Up</a> |
              <a href="/signin?redirect=<%= request.path_info %>">Sign In</a>
            <% end %>
          </div>
        </div>
      </div>
      <% if in_labs? %>
        <div id="subheader" class="labs">
          <div class="container">
            <h2 class="sublogo">Labs</h2>
            <div class="nav">
              <ul>
                <li><a href="/labs/resources">Resources</a></li>
                <li><a href="/labs/discussions">Discussions</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="clearfix"></div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
      <div id="footer">
        <div class="container">
          <span class="copyright">&copy; <%= Time.now.strftime("%Y") %> Social Teeth</span>
          <a href="/terms-of-use">Terms of Use</a> |
          <a href="/privacy-policy">Privacy Policy</a> |
          <a href="mailto:contact@socialteeth.org" target="_blank">contact@socialteeth.org</a>
          <a href="http://twitter.com/socialteeth" class="twitter" target="_blank"></a>
        </div>
      </div>
    </div>
  </body>
</html>

